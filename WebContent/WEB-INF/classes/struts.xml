	<!-- 订单模块 -->
	<package name="sysOrderModel" extends="iterceptor" namespace="/sysOrder">
		<action name="publicInitateSysOrderAction" class="order.hq.web.action.sysorder.state.PublicInitateSysOrderAction">
			<result name="query">/jsp/SysOrder/Public_Initate_SysOrder_Query.jsp</result>
		</action>
		<action name="publicAcceptSysOrderAction" class="order.hq.web.action.sysorder.state.PublicAcceptSysOrderAction">
			<result name="query">/jsp/SysOrder/Public_Accept_SysOrder_Query.jsp</result>
		</action>
		<action name="publicTurnoverSysOrderAction" class="order.hq.web.action.sysorder.state.PublicTurnoverSysOrderAction">
			<result name="query">/jsp/SysOrder/Public_Turnover_SysOrder_Query.jsp</result>
		</action>
		<action name="publicCompleteSysOrderAction" class="order.hq.web.action.sysorder.state.PublicCompleteSysOrderAction">
			<result name="query">/jsp/SysOrder/Public_Complete_SysOrder_Query.jsp</result>
		</action>
		<action name="publicCancelSysOrderAction" class="order.hq.web.action.sysorder.state.PublicCancelSysOrderAction">
			<result name="query">/jsp/SysOrder/Public_Cancel_SysOrder_Query.jsp</result>
		</action>
		
		<action name="privateInitateSysOrderAction" class="order.hq.web.action.sysorder.state.PrivateInitateSysOrderAction">
			<result name="query">/jsp/SysOrder/Private_Initate_SysOrder_Query.jsp</result>
		</action>
		<action name="privateAcceptSysOrderAction" class="order.hq.web.action.sysorder.state.PrivateAcceptSysOrderAction">
			<result name="query">/jsp/SysOrder/Private_Accept_SysOrder_Query.jsp</result>
		</action>
		<action name="privateTurnoverSysOrderAction" class="order.hq.web.action.sysorder.state.PrivateTurnoverSysOrderAction">
			<result name="query">/jsp/SysOrder/Private_Turnover_SysOrder_Query.jsp</result>
		</action>
		<action name="privateCompleteSysOrderAction" class="order.hq.web.action.sysorder.state.PrivateCompleteSysOrderAction">
			<result name="query">/jsp/SysOrder/Private_Complete_SysOrder_Query.jsp</result>
		</action>
		<action name="privateCancelSysOrderAction" class="order.hq.web.action.sysorder.state.PrivateCancelSysOrderAction">
			<result name="query">/jsp/SysOrder/Private_Cancel_SysOrder_Query.jsp</result>
		</action>
	</package>
	
	<!-- 反馈模块 -->
	<package name="sysFeedbackModel" extends="iterceptor" namespace="/sysFeedback">
		<action name="sysFeedbackAction" class="order.hq.web.action.sysfeedback.SysFeedbackAction">
		</action>
		
		<action name="publicInitateSysFeedbackAction" class="order.hq.web.action.sysfeedback.state.PublicInitateSysFeedbackAction">
			<result name="query">/jsp/SysFeedback/Public_Initate_SysFeedback_Query.jsp</result>
		</action>
	</package>
	
	<!-- 系统管理模块 -->
	<package name="systemModel" extends="iterceptor" namespace="/system">
		<!-- 用户管理 -->
		<action name="sysUserAction" class="order.hq.web.action.system.SysUserAction">
			<result name="query">/jsp/System/SysUser/SysUser_Query.jsp</result>
			<result name="add">/jsp/System/SysUser/SysUser_Add.jsp</result>
			<result name="edit">/jsp/System/SysUser/SysUser_Update.jsp</result>
		</action>
		
		<!-- 语种管理 -->
		<action name="baseLanguageAction" class="order.hq.web.action.system.BaseLanguageAction">
			<result name="query">/jsp/System/BaseLanguage/BaseLanguage_Query.jsp</result>
		</action>
	</package>

